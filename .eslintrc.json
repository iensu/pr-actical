{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-unused-vars": [
      "error",
      { "varsIgnorePattern": "^_" }
    ]
  },
  "overrides": [
    {
      "files": ["test/*.test.js", "test/**/*.test.js"],
      "env": {
        "mocha": true
      },
      "globals": {
        "expect": true,
        "sinon": true
      }
    },
    {
      "files": ["src/app/*.js", "src/app/**/*.js"],
      "env": {
        "browser": true
      }
    }
  ]
}
